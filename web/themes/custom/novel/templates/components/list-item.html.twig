{%
  set status_classes = [
    'tag',
    'tag--fill',
    'tag--small',
    'status',
    status_value == 'TicketSaleNotOpen' ? 'status--not-for-sale',
    status_value == 'SoldOut' ? 'status--sold-out',
    status_value == 'Cancelled' ? 'status--cancelled',
    status_value == 'Occurred' ? 'status--occurred',
  ]
%}

<a class="content-list-item content-list-item-grid arrow__hover--right-small" {{ attributes.addClass(classes).setAttribute('href', url) }}>
  <div class="content-list-item__image-container content-list-item--status-parent">
    {% if status_value and status_value != 'Active' %}
        <span class="{{ status_classes|join(' ') }}">{{ status }}</span>
    {% endif %}
    {{ include('@novel/components/media-container.html.twig'
      , {
      attributes: create_attribute(),
      media: image,
      has_media: image,
      placeholder_text: image_placeholder_text,
    }, false) }}
  </div>
  <div class="content-list-item__content">
    {{ categories }}

    <div class="content-list-item__content-top-container">
      <div class="content-list-item__content-top-container__inner">
        <h2 class="content-list-item__title">{{ title }}</h2>
        {% if description %}
          <div class="content-list-item__description">
            {{ description }}
          </div>
        {% endif %}
      </div>
      <div class="content-list-item__content-top-container__price">
          {{ ticket_price }}
        </div>
    </div>

    <div class="content-list-item__content-bottom-container">
      <div class="content-list-item__content-bottom-container__item">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg"><g clip-path="url(#clip0_2269_613)"><path fill-rule="evenodd" clip-rule="evenodd" d="M8 1.5C10.4853 1.5 12.5 3.51472 12.5 6C12.5 7.53732 11.2609 10.087 8.78288 13.7415L8.4114 14.2842C8.21262 14.5719 7.78738 14.5719 7.5886 14.2842C4.86293 10.3382 3.5 7.61231 3.5 6C3.5 3.51472 5.51472 1.5 8 1.5ZM8 2.5C6.067 2.5 4.5 4.067 4.5 6C4.5 7.17492 5.51254 9.33949 7.53774 12.4207L7.99933 13.114L8.11535 12.9428C10.3154 9.66704 11.4429 7.35797 11.4979 6.09508L11.5 6C11.5 4.067 9.933 2.5 8 2.5ZM8 4C9.10457 4 10 4.89543 10 6C10 7.10457 9.10457 8 8 8C6.89543 8 6 7.10457 6 6C6 4.89543 6.89543 4 8 4ZM8 5C7.44772 5 7 5.44772 7 6C7 6.55228 7.44772 7 8 7C8.55228 7 9 6.55228 9 6C9 5.44772 8.55228 5 8 5Z" fill="currentColor"></path></g><defs><clipPath id="clip0_2269_613"><rect width="16" height="16" fill="white"></rect></clipPath></defs></svg>
