{%
  set classes = [
  'list-description',
  'list-description--' ~ type
]
%}

<dl {{ attributes.addClass(classes) }}>
  {% for item in items %}
    {% if item.value %}
      <div class="list-description__item">
        <dt class="list-description__key">{{ item.label }}</dt>
        <dd class="list-description__value">{{ item.value }}</dd>
      </div>
    {% endif %}
  {% endfor %}
</dl>
