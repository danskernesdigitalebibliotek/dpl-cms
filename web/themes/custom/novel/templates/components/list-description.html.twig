{%
  set classes = [
  'list-description',
  'list-description--' ~ type,
]
%}

<dl {{ attributes.addClass(classes) }}>
  {% for item in items %}
    {% if item.value %}
      <div class="list-description__item">
        <dt class="list-description__key">
          {% if item.noLabelOrIcon %}
            <span class="hide-visually">{{ item.label }}</span>
          {% elseif item.icon %}
            <img src="{{ item.icon }}" alt="{{ item.label }}" />
          {% else %}
            {{ item.label }}
          {% endif %}
        </dt>
        <dd class="list-description__value">{{ item.value }}</dd>
      </div>
    {% endif %}
  {% endfor %}
</dl>
