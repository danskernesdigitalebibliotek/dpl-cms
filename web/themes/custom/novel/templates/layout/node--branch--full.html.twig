<article  {{ attributes }}>
  {% set hero_items = [
    {
      label: 'Address'|trans,
      values: [content.field_address_dawa.0 ? content.field_address_dawa : null],
    },
    {
      label: 'Email'|trans,
      values: [content.field_email.0 ? content.field_email : null],
    },
    {
      label: 'Phone'|trans,
      values: [content.field_phone.0 ? content.field_phone : null],
    },

  ] %}

  {{ include('@novel/components/hero.html.twig'
    , {
    attributes: create_attribute(),
    title: label,
    teaser_text: content.field_teaser_text.0,
    media: content.field_main_media.0,
    items: hero_items,
    baseIconPath: baseIconPath,
  }, false) }}

    {{ content.field_paragraphs }}
</article>
