{% set date = eventinstance.get('date').get(0) %}
{% set description_items = [
  {
    label: 'Date'|t({}, {context: 'DPL event'}),
    value: content.date,
    icon: '/themes/custom/novel/assets/dpl-design-system/icons/collection/Calendar.svg',
  },
  {
    label: 'Time'|trans,
    value: time_combined,
    icon: '/themes/custom/novel/assets/dpl-design-system/icons/collection/Opening hours.svg',
  },
  {
    label: 'Place'|trans,
    value: content.event_place.0 ? content.event_place : null,
    icon: '/themes/custom/novel/assets/dpl-design-system/icons/collection/Location.svg',
  },
  {
    label: 'Address'|trans,
    value: content.event_address.0 ? content.event_address : null,
    noLabelOrIcon: true,
  },
] %}

{% set relations_items = [
  {
    label: 'Branch'|trans,
    value: content.branch.0 ? content.branch : null,
  },
  {
    label: 'Partners'|trans,
    value: content.event_partners.0 ? content.event_partners : null,
  },
] %}

{{ include('@novel/components/full-event.html.twig', {
  label: content.title,
  image: content.event_image,
  cta: content.event_link,
  paragraphs: content.event_paragraphs,
  date: content.date,
  description: content.event_description,
  description_items: description_items,
  relations_items: relations_items,
  price: content.event_ticket_categories.0 ? content.event_ticket_categories : null,
  categories: content.event_categories,
  teaser_text: content.event_teaser_text,
  tags: content.event_tags,
  event_instances: event_instances,
  expired: expired,
}, false) }}
